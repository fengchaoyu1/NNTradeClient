<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zhaohg.main" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="zhaohg.testable.TestableActionBarActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="zhaohg.account.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="zhaohg.account.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="zhaohg.sell.EditSellPostActivity"
            android:label="@string/title_activity_edit_sell_post" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
